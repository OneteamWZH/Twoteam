<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_child_attention"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="weizhihui.bwie.com.myquarter.ChildAttentionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:background="@drawable/mm"
        >
     <ImageView
         android:id="@+id/ACimgid"
         android:layout_width="40sp"
         android:layout_height="40sp"

         android:layout_marginLeft="8sp"
         android:src="@drawable/browse_back"
         />
        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20sp"
            android:text="CYT 哈哈"
            android:layout_marginTop="5sp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/ACimg2id"
            android:layout_width="30sp"
            android:layout_height="30sp"
           android:layout_alignParentRight="true"
            android:layout_marginRight="25sp"
            android:layout_marginLeft="8sp"
            android:src="@drawable/raw_1499995160"
            />
    </RelativeLayout>
       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="0dp"
           android:layout_weight="2"

           >
           <com.facebook.drawee.view.SimpleDraweeView

               android:layout_width="50dp"
               android:layout_height="50dp"
               android:id="@+id/ACSimple_id"
               fresco:roundAsCircle="true"
               android:layout_marginLeft="35px"
               android:layout_alignParentLeft="true"
               android:layout_marginTop="18px"
               />
           <TextView
               android:id="@+id/ACfenid"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_toRightOf="@+id/ACSimple_id"
               android:layout_alignTop="@+id/ACSimple_id"
               android:layout_marginLeft="25sp"
               android:text="15468962粉丝 |  17关注"
               android:textSize="20sp"
               />
           <ImageView
               android:id="@+id/ACimgGuanid"
               android:layout_width="170sp"
               android:layout_height="wrap_content"
               android:background="@drawable/attention_selector"
               android:layout_toRightOf="@+id/ACSimple_id"
              android:layout_alignLeft="@+id/ACfenid"
               android:layout_below="@+id/ACfenid"
               android:layout_marginTop="20sp"
               />
       </RelativeLayout>


    <android.support.v7.widget.RecyclerView
        android:id="@+id/CArvid"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="6"
        />
</LinearLayout>
