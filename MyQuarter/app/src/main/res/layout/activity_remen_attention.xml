<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_remen_attention"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="weizhihui.bwie.com.myquarter.view.activity.RemenAttentionActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#1E90FF"
        >
        <TextView
            android:id="@+id/ReFinishid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="取消"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20sp"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="20sp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="热门关注"
            android:layout_centerInParent="true"
            android:layout_marginLeft="20sp"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            android:textSize="20sp"
            />
        <LinearLayout
            android:layout_width="130sp"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape_layout"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            android:layout_centerInParent="true"

            >
           <EditText
               android:id="@+id/edid"
               android:layout_width="100sp"
               android:layout_height="wrap_content"
               android:hint="输入关键字"
               android:textSize="12sp"
               android:background="@null"
               android:padding="10dp"
               android:layout_centerInParent="true"
               />
            <ImageView
                android:layout_width="30sp"
                android:layout_height="30sp"
                android:layout_marginTop="6sp"
                android:src="@drawable/ss"
                />
        </LinearLayout>
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/Retabid"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:tabMode="scrollable"
        app:tabTextAppearance="@android:style/TextAppearance.Large"
         app:tabIndicatorColor="#1E90FF"
        app:tabSelectedTextColor="#1E90FF"
        />
    <android.support.v4.view.ViewPager
        android:id="@+id/Repagerid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
