<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_search_friends"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="weizhihui.bwie.com.myquarter.view.activity.SearchFriendsActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#03A9F4"
        >
        <ImageView
            android:id="@+id/Fupdate_top"
            android:src="@drawable/browse_back"
            android:layout_width="30dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_alignParentLeft="true"
            />
        <TextView
            android:id="@+id/Fbackid"
            android:textColor="#fff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/update_top"
            android:layout_centerVertical="true"
            android:layout_marginLeft="6sp"
            android:textSize="18sp"
            android:text="返回"
            />


        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="搜索好友"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#fff"
            />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC"
        >
        <LinearLayout
            android:layout_width="320sp"
            android:layout_height="wrap_content"
            android:background="@drawable/myshape_layout"
            android:layout_margin="8sp"
            >
        <ImageView
            android:id="@+id/Fimgid"
            android:layout_width="30sp"
            android:layout_height="30sp"
            android:layout_marginTop="6sp"
            android:src="@drawable/ss"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="10sp"
            />
        <EditText
            android:id="@+id/Fedid"
            android:layout_width="200sp"
            android:layout_height="wrap_content"
            android:hint="输入ID或者好友名"
            android:textSize="12sp"
            android:background="@null"
            android:padding="10dp"
           android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/Fimgid"
            android:layout_marginLeft="5sp"
            />
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="取消"
            android:textSize="20sp"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5sp"
        >

        <TextView
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:textSize="18sp"
            android:text="搜索历史"
            android:textStyle="bold"
            android:layout_centerVertical="true"
            android:textColor="#DCDCDC"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:text="清空搜索历史"
            android:layout_centerVertical="true"
            android:textColor="#DCDCDC"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10sp"
            />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#DCDCDC"
        android:layout_marginTop="10sp"
        />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Frv1id"
        android:layout_width="match_parent"
        android:layout_height="180dp"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#DCDCDC"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30sp"
            android:textSize="15sp"
            android:text="你可能感兴趣的用户"
            android:layout_centerInParent="true"
            android:textColor="#A9A9A9"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/Frv2id"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>
</LinearLayout>
