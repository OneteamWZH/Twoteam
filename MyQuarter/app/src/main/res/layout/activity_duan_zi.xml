<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="weizhihui.bwie.com.myquarter.DuanZiActivity">
    <include layout="@layout/publish_top_layout"/>
    <EditText
        android:id="@+id/publishEit"
        android:textSize="14sp"
        android:textColorHint="#AAA"
        android:hint="请输入内容,禁止输入色情 暴力等违反国家法律的内容,违反者将封号处理!"
        android:enabled="true"
        android:gravity="top"
        android:minLines="8"
        android:maxLines="10"
        android:scrollbars="vertical"
        android:background="@drawable/shape_publishduan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true" />

    <ImageView
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/jiahao_black"
        />
</LinearLayout>
