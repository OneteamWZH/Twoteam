<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:id="@+id/Deawer"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="weizhihui.bwie.com.myquarter.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="#1E90FF"
        android:orientation="horizontal"
        >

    <com.facebook.drawee.view.SimpleDraweeView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/Simple_id"
        fresco:roundAsCircle="true"
        android:layout_marginLeft="15px"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="18px"
        />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="推荐"
            android:textSize="23dp"
            android:textColor="#fff"
            android:id="@+id/title"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            />
        
        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/raw"
            android:layout_marginRight="15px"
            android:layout_marginTop="15px"
            android:layout_alignParentRight="true"
            android:id="@+id/Share"

            />

    </RelativeLayout>


    <com.hjm.bottomtabbar.BottomTabBar
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/bar"
        android:layout_weight="1"
        ></com.hjm.bottomtabbar.BottomTabBar>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="300dp"
        android:layout_height="match_parent"
        android:id="@+id/left"
        android:layout_gravity="left"
        android:background="#fff"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:src="@drawable/drawerlayout_background"
            android:id="@+id/Background_img"
            android:layout_alignParentTop="true"
            ></ImageView>

        <com.facebook.drawee.view.SimpleDraweeView
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:id="@+id/Simple_click"
            fresco:roundAsCircle="true"
            android:layout_gravity="center"
            android:layout_marginLeft="15px"
            android:layout_marginTop="100dp"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sign_tv"
            android:layout_below="@+id/Simple_click"
            android:layout_alignLeft="@+id/Simple_click"
            android:text="编辑个性签名"
            android:textColor="#fff"
            android:textSize="18dp"
            android:layout_marginTop="5px"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#fff"
            android:layout_toRightOf="@+id/Simple_click"
            android:layout_alignTop="@+id/Simple_click"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="20dp"
            android:text="意中人"
            android:textSize="22dp"
            android:id="@+id/name_id"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/sex"
            android:layout_toRightOf="@+id/name_id"
            android:layout_alignTop="@+id/name_id"
            android:layout_marginLeft="70dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/raw_1499933216"
            android:layout_below="@+id/Background_img"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/xin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的关注"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/xin"
            android:layout_alignBottom="@+id/xin"
            android:layout_marginLeft="10dp"
            android:id="@+id/Guanzhu_id"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/jian1"
            android:src="@drawable/raw_1499943790"
            android:layout_toRightOf="@+id/Guanzhu_id"
            android:layout_alignBottom="@+id/Guanzhu_id"
            android:layout_marginLeft="150dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/raw_1499947358"
            android:id="@+id/xing"
            android:layout_below="@+id/xin"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/xin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="我的收藏"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/xing"
            android:layout_alignBottom="@+id/xing"
            android:layout_marginLeft="10dp"
            android:id="@+id/Shoucang_id"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/jian2"
            android:src="@drawable/raw_1499943790"
            android:layout_toRightOf="@+id/Shoucang_id"
            android:layout_alignBottom="@+id/Shoucang_id"
            android:layout_marginLeft="150dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/raw_1499946865"
            android:id="@+id/sou"
            android:layout_below="@+id/xing"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/xin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="搜索好友"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/sou"
            android:layout_alignBottom="@+id/sou"
            android:layout_marginLeft="10dp"
            android:id="@+id/Sousuo_id"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/jian3"
            android:src="@drawable/raw_1499943790"
            android:layout_toRightOf="@+id/Sousuo_id"
            android:layout_alignBottom="@+id/Sousuo_id"
            android:layout_marginLeft="150dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/raw_1499947389"
            android:id="@+id/ling"
            android:layout_below="@+id/sou"
            android:layout_marginTop="20dp"
            android:layout_alignLeft="@+id/xin"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="消息通知"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/ling"
            android:layout_alignBottom="@+id/ling"
            android:layout_marginLeft="10dp"
            android:id="@+id/Tongzhi_id"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:id="@+id/jian4"
            android:src="@drawable/raw_1499943790"
            android:layout_toRightOf="@+id/Tongzhi_id"
            android:layout_alignBottom="@+id/Tongzhi_id"
            android:layout_marginLeft="150dp"
            />

        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/yueliang"
            android:layout_below="@+id/ling"
            android:layout_marginTop="120dp"
            android:layout_marginLeft="25dp"
            android:id="@+id/yueliang"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="夜间模式"
            android:textSize="18dp"
            android:layout_toRightOf="@+id/yueliang"
            android:layout_marginLeft="5dp"
            android:layout_alignBottom="@+id/yueliang"
            android:id="@+id/Ye_id"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_below="@+id/Ye_id"
            android:layout_alignLeft="@+id/Ye_id"
            android:layout_marginTop="35dp"
            android:src="@drawable/raw_1499947056"
            android:id="@+id/Folder_id"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="我的作品"
            android:layout_below="@+id/yueliang"
            android:layout_marginTop="70dp"
            android:layout_marginLeft="35dp"
            android:id="@+id/My"
            />

        <ImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/raw_1499947157"
            android:layout_toRightOf="@+id/Folder_id"
            android:layout_alignBottom="@+id/Folder_id"
            android:layout_marginLeft="145dp"
            android:id="@+id/Shezhi_img"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="设置"
            android:layout_toRightOf="@+id/My"
            android:layout_alignLeft="@+id/Shezhi_img"
            android:layout_below="@+id/Shezhi_img"
            />



    </RelativeLayout>


</android.support.v4.widget.DrawerLayout>
