<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/top_back_in"
    android:gravity="center"
    tools:context="weizhihui.bwie.com.myquarter.ShareActivity">
    <LinearLayout
        android:background="@drawable/shape_video_duanzi"
        android:id="@+id/video"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:src="@drawable/videovideo"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="视频"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="30dp"
        android:background="@drawable/shape_video_duanzi"
        android:id="@+id/duanzi"
        android:layout_below="@+id/video"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/duanziduanzi" />
        <TextView
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:textStyle="bold"
            android:text="段子"
            />
    </LinearLayout>
</RelativeLayout>
