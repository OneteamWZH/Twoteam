<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_else_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/timg"
    tools:context="weizhihui.bwie.com.myquarter.ElseLogin_Activity">
    <ImageView
        android:id="@+id/elseloginid"
        android:layout_width="25sp"
        android:layout_height="25sp"
        android:src="@drawable/raw_1500023215"
        android:layout_alignParentLeft="true"
        android:layout_marginTop="5sp"

        />
    <TextView
        android:id="@+id/regtelid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注册账号"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20sp"
        android:layout_marginTop="10sp"
        android:textSize="18sp"
        android:textColor="#fff"
        />

    <ImageView
        android:id="@+id/loginimgid"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="70sp"
        android:src="@drawable/denglu"
        />

    <LinearLayout
        android:layout_marginTop="45dp"
        android:layout_below="@+id/loginimgid"
        android:id="@+id/linear"
        android:background="@drawable/reg_login_back"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:orientation="vertical"
        android:layout_width="230dp"
        android:layout_height="wrap_content">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="账号"
                android:textColor="#fff"
                />
            <EditText
                android:textColor="#fff"
                android:id="@+id/telid"
                android:textCursorDrawable="@drawable/edit_color"
                android:textColorHint="#fff"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="密码"
                android:textColor="#fff"
                />
            <EditText
                android:textColor="#fff"

                android:id="@+id/pwdid"
                android:textCursorDrawable="@drawable/edit_color"
                android:textColorHint="#fff"
                android:layout_width="150dp"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>
    <Button
        android:id="@+id/elselogin2id"
        android:layout_width="200sp"
        android:layout_height="wrap_content"
        android:text="登录"
        android:gravity="center"
        android:background="#F4A460"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="300sp"
        android:textSize="18sp"
        android:textColor="#fff"
        />
    <TextView
        android:id="@+id/wangjipwdid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="忘记密码"
        android:layout_marginTop="350sp"
        android:textSize="16sp"
        android:textColor="#fff"
        android:layout_alignRight="@+id/elselogin2id"

        />
    <TextView
        android:id="@+id/youkelogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="游客登录"
        android:layout_marginTop="390sp"
        android:textSize="18sp"
        android:textColor="#fff"
        android:layout_centerHorizontal="true"
        />
</RelativeLayout>
